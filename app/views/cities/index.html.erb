<h1>Listing cities</h1>

<table class="table">
  <tr>
    <th>Local</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.local %></td>
    <td><%= link_to 'Show', city, :class => 'btn' %></td>
    <td><%= link_to 'Edit', edit_city_path(city), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New City', new_city_path, :class => 'btn' %>
