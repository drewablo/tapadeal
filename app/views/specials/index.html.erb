<h1>Listing specials</h1>

<table class ="table">
  <tr>
    <th>Drink</th>
    <th>Day</th>
    <th>Bar</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @specials.each do |special| %>
  <tr>
    <td><%= special.drink %></td>
    <td><%= special.day %></td>
    <td><%= special.bar.name %></td>
    <td><%= special.city.local %></td>
    <td><%= link_to 'Show', special, :class => 'btn' %></td>
    <td><%= link_to 'Edit', edit_special_path(special), :class => 'btn' %></td>
    <td><%= link_to 'Destroy', special, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Special', new_special_path, :class => 'btn' %>
